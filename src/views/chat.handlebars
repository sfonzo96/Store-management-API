<h2 id='welcomeText'>Welcome to the chat!</h2>

<p id='userName'>
    {{#if user}}
    {{user.firstName}}, write and send your message!
    {{/if}}
</p>

{{#unless user}}
<div>
    <p><a href='/signup'>Create an acount</a>
        or
        <a href='/'>log in</a>.
    </p>
</div>
{{/unless}}

<div>
    <input id='messageInput' type='text' />
    <button id='submitBtn' class='submitBtn'>Send</button>
</div>

<div id='messagesContainer' class='messagesContainer'>

</div>

<script src='//cdn.jsdelivr.net/npm/sweetalert2@11'></script>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/chat.js'></script>